<div class="card" dir="<%= render.dir %>" lang="<%= render.lang %>">
    <form action="<%= form.request.path %>" method="<%= form.request.method %>">
        <% if (form.title) { %>
            <div class="card-header"><%= form.title %>&nbsp;<% if (form.icon) { %><i class="<%= form.icon %>"></i><% } %></div>
        <% } %>
        <div class="card-body">
            <div class="row">
                <% form.fields.forEach(field => { %>
                    <div class="col-6 mb-2">
                        <label for="<%= field.id || '' %>"><%= field.label %>&nbsp;<% if (field.required == true ) { %><span class="text-danger">*</span><% } %></label>
                        <% if (field.required == true) { %>
                            <input class="form-control" type="<%= field.type || 'text' %>" name="<%= field.id || '' %>" id="<%= field.id || '' %>" required>
                        <% } else { %>
                            <input class="form-control" type="<%= field.type || 'text' %>" name="<%= field.id || '' %>" id="<%= field.id || '' %>">
                        <% } %>
                    </div>
                <% }) %>
            </div>
        </div>
        <% if (form.submitButton) { %>
            <div class="card-footer">
                <% if (form.submitButton.disabled == true) { %>
                    <button type="submit" class="btn btn-<%= form.submitButton.color || 'primary' %>" disabled><%= form.submitButton.label %></button>
                <% } else { %>
                    <button type="submit" class="btn btn-<%= form.submitButton.color || 'primary' %>"><%= form.submitButton.label %></button>
                <% } %>
            </div>
        <% } %>
    </form>
</div>
<% if (render.styleInclude == true) { %>
    <% if (render.dir == "rtl") { %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.rtl.min.css">
    <% } else { %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <% } %>
<% } %>